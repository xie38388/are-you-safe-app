{
  "name": "are-you-safe-api",
  "version": "1.0.0",
  "description": "Serverless backend for Are You Safe? iOS app",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy --env production",
    "db:create": "wrangler d1 create are-you-safe-db",
    "db:migrate": "wrangler d1 execute are-you-safe-db --file=./migrations/0001_init.sql",
    "db:migrate:local": "wrangler d1 execute are-you-safe-db --local --file=./migrations/0001_init.sql",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "wrangler": "^3.24.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
